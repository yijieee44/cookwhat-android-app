            android:parentActivityName=".activities.ViewRecipeActivity" />
        <activity
            android:name=".activities.UserActivity"
            android:exported="true"
            android:label="@string/view"
            android:parentActivityName=".activities.UserActivity" />
        <activity
            android:name=".activities.SearchActivity"
            android:exported="true"
            android:label="@string/search"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.CreateActivity"
            android:exported="true"
            android:label="@string/create_recipe"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.SearchKeywordResultActivity"
            android:exported="false"
            android:label="@string/search_result"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.FavouriteActivity"
            android:exported="false"
            android:label="Favourite Result"
            android:parentActivityName=".activities.MainActivity" />
        <activity
