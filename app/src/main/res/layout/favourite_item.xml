<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CS_Favourite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundedrec_nude"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/IV_FavouriteImage"
        android:layout_width="120dp"
        android:layout_height="104dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dish" />

    <TextView
        android:id="@+id/TV_FavouriteName"
        android:layout_width="245dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/IV_FavouriteImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_Tag1"
        android:layout_width="68dp"
        android:layout_height="17dp"
        android:layout_marginStart="2dp"
        android:text="TextView"
        android:textColor="@color/grey"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/IV_Tag1"
        app:layout_constraintTop_toBottomOf="@+id/TV_FavouriteName" />

    <TextView
        android:id="@+id/TV_Tag2"
        android:layout_width="68dp"
        android:layout_height="17dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="9dp"
        android:text="TextView"
        android:visibility="visible"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/IV_Tag2"
        app:layout_constraintTop_toBottomOf="@+id/TV_Tag1" />

    <TextView
        android:id="@+id/TV_Tag3"
        android:layout_width="68dp"
        android:layout_height="17dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="9dp"
        android:text="TextView"
        android:visibility="visible"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/IV_Tag3"
        app:layout_constraintTop_toBottomOf="@+id/TV_Tag2" />

    <ImageView
        android:id="@+id/IV_Tag1"
        android:layout_width="24dp"
        android:layout_height="18dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="2dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/TV_Tag1"
        app:layout_constraintStart_toEndOf="@+id/IV_FavouriteImage"
        app:layout_constraintTop_toBottomOf="@+id/TV_FavouriteName"
        app:srcCompat="@drawable/ic_tag_svgrepo_com"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/IV_Tag2"
        android:layout_width="24dp"
        android:layout_height="18dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/TV_Tag3"
        app:layout_constraintStart_toEndOf="@+id/IV_FavouriteImage"
        app:layout_constraintTop_toBottomOf="@+id/IV_Tag1"
        app:srcCompat="@drawable/ic_tag_svgrepo_com"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/IV_Tag3"
        android:layout_width="24dp"
        android:layout_height="18dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/TV_Tag3"
        app:layout_constraintStart_toEndOf="@+id/IV_FavouriteImage"
        app:layout_constraintTop_toBottomOf="@+id/IV_Tag2"
        app:srcCompat="@drawable/ic_tag_svgrepo_com"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/Btn_Unfavourite"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/ic_unfavourite"
        app:layout_constraintBottom_toTopOf="@+id/Btn_Move"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toEndOf="@+id/IV_FavouriteImage"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/Btn_Move"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ic_move_to"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toEndOf="@+id/IV_FavouriteImage"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>