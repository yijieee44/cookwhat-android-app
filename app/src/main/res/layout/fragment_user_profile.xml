<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CS"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    tools:context=".fragments.UserProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CS_Main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/IV_ProfilefFrame"
                android:layout_width="111dp"
                android:layout_height="110dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/IV_Profile"
                android:layout_width="71dp"
                android:layout_height="74dp"
                app:layout_constraintBottom_toBottomOf="@+id/IV_ProfilefFrame"
                app:layout_constraintEnd_toEndOf="@+id/IV_ProfilefFrame"
                app:layout_constraintStart_toStartOf="@+id/IV_ProfilefFrame"
                app:layout_constraintTop_toTopOf="@+id/IV_ProfilefFrame"
                tools:src="@tools:sample/avatars" />

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/Btn_Follower"
                android:layout_width="92dp"
                android:layout_height="88dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/whitecircle"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="88"
                android:textSize="30sp"
                app:layout_constraintEnd_toStartOf="@+id/Btn_Following"
                app:layout_constraintStart_toEndOf="@+id/IV_ProfilefFrame"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TV_UserName"
                android:layout_width="104dp"
                android:layout_height="70dp"
                android:text="TextView"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IV_ProfilefFrame" />

            <TextView
                android:id="@+id/TV_Follower"
                android:layout_width="84dp"
                android:layout_height="34dp"
                android:layout_marginTop="-1dp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="Followers"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/TV_Following"
                app:layout_constraintStart_toEndOf="@+id/IV_ProfilefFrame"
                app:layout_constraintTop_toBottomOf="@+id/Btn_Follower" />

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/Btn_Following"
                android:layout_width="92dp"
                android:layout_height="88dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/whitecircle"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="88"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TV_Following"
                android:layout_width="84dp"
                android:layout_height="34dp"
                android:layout_marginTop="-1dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="Followings"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Btn_Following" />

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/Btn_Favourite"
                android:layout_width="197dp"
                android:layout_height="59dp"
                android:background="@drawable/roundedrecbtn"
                android:drawableEnd="@drawable/favourite"
                android:drawableRight="@drawable/favourite"
                android:drawablePadding="0dp"
                android:fontFamily="@font/candyjelly"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="28dp"
                android:paddingBottom="15dp"
                android:text="see your"
                android:textColor="#744518"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/TL_ProfileTab"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.809"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.90999997" />

            <LinearLayout
                android:id="@+id/LL_AboutMe"
                android:layout_width="412dp"
                android:layout_height="430dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TL_ProfileTab">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic__about_me_description" />

                <TextView
                    android:id="@+id/TV_TabDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_about_me_email_address" />

                <TextView
                    android:id="@+id/TV_TabEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_about_me_country"
                    android:text="Country of Origin"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_TabCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:text="Level of Cooking Skills"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_about_me_level" />

                <TextView
                    android:id="@+id/TV_TabLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Preferences"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_about_me_preferences" />

                <TextView
                    android:id="@+id/TV_TabPreferences1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TV_TabPreferences2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/TV_TabPreferences3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/Btn_Edit"
                    android:layout_width="39dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_baseline_edit_24"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/CL_SecretRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TL_ProfileTab">

                <TextView
                    android:id="@+id/TV_Empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="130dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.example.cookwhat.ExpandableHeightGridView
                    android:id="@+id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="1dp"
                    android:isScrollContainer="false"
                    android:numColumns="2"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </com.example.cookwhat.ExpandableHeightGridView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/TL_ProfileTab"
                android:layout_width="376dp"
                android:layout_height="55dp"

                android:layout_marginTop="236dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabMode="fixed"
                app:tabTextColor="#744518">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/TL_SecretRecipe"
                    android:layout_width="188dp"
                    android:layout_height="50dp"
                    android:text="My Secret Recipe" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/TL_AboutMe"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"

                    android:backgroundTintMode="add"
                    android:text="About Me" />

            </com.google.android.material.tabs.TabLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

