<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/avatar_winter_custome_23_svgrepo_com" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TVUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@jennifer"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yumyumuymuymumumymummmu so yummy hahahahahahahahhahahaha" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TVTimeCommented"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="xx:xx:xx" />


        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/TVDummy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text=""
        android:visibility="invisible" />
</RelativeLayout>

